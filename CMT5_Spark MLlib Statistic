THONG KE TOM TAT

Scala

import org.apache.spark.mllib.linalg.Vectors
import org.apache.spark.mllib.stat.{MultivariateStatisticalSummary, Statistics}

val A = sc.parallelize(
  Seq(
    Vectors.dense(1.0, 10.0, 2.0),
    Vectors.dense(2.0, 4.0, -10.0),
    Vectors.dense(3.0, 5.0, 0.0)
  )
)

val summary: MultivariateStatisticalSummary = Statistics.colStats(A)
println(summary.mean)  //Tinh trung binh
println(summary.variance)  // Tinh phuong sai
println(summary.numNonzeros)  // So gia tri # 0
println(summary.max) 
println(summary.min)
println(summary.count)  //Kich thuoc Danh sach
println(summary.normL1) //Tong moi cot
 

PYTHON

import sys
!{sys.executable} -m pip install --user numpy
import numpy as np

from pyspark.mllib.stat import Statistics

mat = sc.parallelize(
    [np.array([1.0, 10.0, 100.0]), 
     np.array([2.0, 20.0, 200.0]), 
     np.array([3.0, 30.0, 300.0])]
)  

# Tính toán thống kê tóm tắt theo cột
summary = Statistics.colStats(mat)
print(summary.mean())         # tinh trung binh theo cot
print(summary.variance())     # tinh phuong sai theo cot
print(summary.numNonzeros())  # so luong phan tu khac 0
print(summary.normL1())       # tinh tong theo cot
print(summary.count())        # kich thuoc ds
print(summary.max())          # so lon nhat moi cot
print(summary.min())          # so be nhat moi cot
